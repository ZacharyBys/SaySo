<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/background_title"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tektuna.sayso.TitleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say So!"
        android:textSize="107sp"
        android:textColor="@color/textcolor"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/title" />

    <TextView
        android:text="See how your opinion compares to those of others. Choose your opinion, and say so!"
        android:layout_width="280dp"
        android:textColor="@color/textcolor"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/subtitle"
        android:textSize="30sp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <Button
        android:text=""
        android:textSize="40sp"
        android:layout_width="300dp"
        android:background="@drawable/playbutton"
        android:layout_height="120dp"
        android:layout_below="@+id/subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:id="@+id/playbutton" />

    <TextView
        android:text="To see statistics for each answer, use with internet"
        android:layout_width="400dp"
        android:textColor="@color/textcolor"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/internet"
        android:textSize="20sp"
        android:layout_below="@+id/playbutton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
